<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:comm="sap.ui.commons"
	controllerName="sap.Aero_IT_Demand.prototype.view.ITFCOE_Projects"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="ITFCOE Projects" class="pageTitle">
		<customHeader>
			<Bar>
				<contentLeft>
					<Button type="Back" press="backToMain" class="simpleBtn" />
				</contentLeft>
				<contentMiddle>
					<Label text="ITFCOE Projects" />
				</contentMiddle>
			</Bar>
		</customHeader>

		<content>
			<HBox width="100%" height="6em" justifyContent="Center"
				alignItems="Center" class="HeaderHBox">
				<ScrollContainer horizontal="true" vertical="false"
					height="4em">

					<SegmentedButton selectedButton="btnBuild" id="HeaderSegment"
						class="HeaderSegmentITFCOE">
						<Button id="btnAll" text="All" press="onClickAll"
							class="btnAllClass SegmentButtonSpaceClass"></Button>
						<Button id="btnApac" text="APAC" press="onClickApac"
							class="btnAllClass SegmentButtonSpaceClass"></Button>
						<Button id="btnBuild" text="Build" press="onClickBuild"
							class="btnAllClass SegmentButtonSpaceClass"></Button>
						<Button id="btnCP" text="C and PS" press="onClickCPS"
							class="btnAllClass SegmentButtonSpaceClass"></Button>
						<Button id="btnEIT" text="EIT" press="onClickEit"
							class="btnAllClass SegmentButtonSpaceClass"></Button>
						<Button id="btnEMEA" text="EMEA" press="onClickEmea" class="btnAllClass"></Button>
					</SegmentedButton>

				</ScrollContainer>
			</HBox>

			<HBox class="backGroundHeaderItFCOE" width="100%">
				<VBox width="33.33%" justifyContent="Center" alignItems="Center">
					<ObjectHeader number="" numberUnit="Completed" id="objCompletedNo"
						class="midObjectNumber">
					</ObjectHeader>
					<comm:HorizontalDivider width="70px"
						class="horizontalBarCompleted" />
				</VBox>
				<VBox width="33.33%" justifyContent="Center" alignItems="Center">
					<ObjectHeader number="" numberUnit="Active" id="objActiveNo"
						class="midObjectNumber">
					</ObjectHeader>
					<comm:HorizontalDivider width="70px"
						class="horizontalBarActive" />
				</VBox>
				<VBox width="33.33%" justifyContent="Center" alignItems="Center">
					<ObjectHeader number="" numberUnit="Pipeline" id="objPipeLineNo"
						class="midObjectNumber">
					</ObjectHeader>
					<comm:HorizontalDivider width="70px"
						class="horizontalBarPipeLine" />
				</VBox>
			</HBox>

			<!-- <List items="{/ProductCollection}" headerText="Products"> -->
			<List id="ProjectListId" items="{ItFcoeProjects>/Projects}">
				<items>
					<ObjectListItem title="{ItFcoeProjects>title}" type="Active"
						press="onListItemPress" number="{ItFcoeProjects>percentage}">
						<firstStatus>
							<ObjectStatus text="{ItFcoeProjects>stage}" state="{ItFcoeProjects>state}" />
						</firstStatus>
						<attributes>
							<ObjectAttribute text="{ItFcoeProjects>type}" />
							<ObjectAttribute text="{ItFcoeProjects>status}" />
						</attributes>
					</ObjectListItem>
				</items>
			</List>

		</content>
	</Page>
</core:View>
