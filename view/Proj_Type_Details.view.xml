<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:comm="sap.ui.commons"
	controllerName="sap.Aero_IT_Demand.prototype.view.Proj_Type_Details"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page>
		<customHeader>
			<Bar>
				<contentLeft>
					<Button type="Back" press="backToMain" class="simpleBtn" />
				</contentLeft>
				<contentMiddle>
					<Label text="Project Type" />
				</contentMiddle>
			</Bar>
		</customHeader>

		<content>
			<!-- <VBox width="100%" justifyContent="Center"> -->
			<HBox width="100%" justifyContent="Center" alignItems="Center"
				class="HeaderHBox" height="6em">
				<ScrollContainer horizontal="true" vertical="false"
					height="4em">
					<SegmentedButton selectedButton="btnAll" id="HeaderSegment"
						class="HeaderSegmentITFCOE">
						<Button id="btnAll" text="All" press="onClickAll"
							class="SegmentButtonSpaceClassType" />
						<Button id="btnActive" text="Infrastructure Only" press="onClickInfrastructure"
							class="SegmentButtonSpaceClassType" width="180px" />
						<Button id="btnCancelled" text="Program" press="onClickProgram"
							class="SegmentButtonSpaceClassType" width="95px" />
						<Button id="btnCompleted" text="Project" press="onClickProject"
							class="SegmentButtonSpaceClassType" />
						<Button id="btnOnHold" text="SAP Configuration" press="onClickSAPConfig"
							class="SegmentButtonSpaceClassType" width="150px" />
					</SegmentedButton>
				</ScrollContainer>
			</HBox>
			<!-- </VBox> -->

			<!-- <HBox> </HBox> -->

			<!-- <List items="{/ProductCollection}" headerText="Products"> -->
			<List id="ProjectListId" items="{ProjectTypeDetails>/Projects}">
				<items>
					<ObjectListItem title="{ProjectTypeDetails>title}"
						type="Active" press="onListItemPress" number="{ProjectTypeDetails>percentage}">
						<firstStatus>
							<ObjectStatus text="{ProjectTypeDetails>stage}"
								state="{ProjectTypeDetails>state}" />
						</firstStatus>
						<attributes>
							<ObjectAttribute text="{ProjectTypeDetails>type}" />
							<ObjectAttribute text="{ProjectTypeDetails>proj_type}" />
						</attributes>
					</ObjectListItem>
				</items>
			</List>

		</content>
	</Page>
</core:View>
