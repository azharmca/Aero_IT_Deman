<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:comm="sap.ui.commons"
	controllerName="sap.Aero_IT_Demand.prototype.view.Proj_Status_Details"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page>
		<customHeader class="backRed">
			<Bar class="backRed">
				<contentLeft>
					<Button type="Back" press="backToMain" class="simpleBtn" />
				</contentLeft>
				<contentMiddle>
					<Label text="Project Status" />
				</contentMiddle>
			</Bar>
		</customHeader>

		<content>
			<!-- <VBox width="100%" justifyContent="Center"> -->
			<HBox width="100%" justifyContent="Center" alignItems="Center"
				class="HeaderHBox" height="6em">
				<ScrollContainer horizontal="true" vertical="false"
					height="4em">
					<SegmentedButton selectedButton="btnAll" id="HeaderSegment"
						class="HeaderSegmentITFCOE">
						<Button id="btnAll" text="All" press="onClickAll"
							class="btnAllClass SegmentButtonSpaceClass" />
						<Button id="btnActive" text="Active" press="onClickActive"
							class="btnAllClass SegmentButtonSpaceClass" />
						<Button id="btnCancelled" text="Cancelled" press="onClickCCancelled"
							class="btnAllClass SegmentButtonSpaceClass" />
						<Button id="btnCompleted" text="Completed" press="onClickCompleted"
							class="btnAllClass SegmentButtonSpaceClass" />
						<Button id="btnOnHold" text="On Hold" press="onClickOnHold"
							class="btnAllClass SegmentButtonSpaceClass" />
					</SegmentedButton>
				</ScrollContainer>
			</HBox>
			<!-- </VBox> -->

			<HBox>
				<!-- <VBox width="100%"> <ObjectHeader number="" numberUnit="Completed" 
					id="objCompletedNo"> </ObjectHeader> <comm:HorizontalDivider width="25%" 
					/> </VBox> <VBox width="100%"> <ObjectHeader number="" numberUnit="Active" 
					id="objActiveNo"> </ObjectHeader> <comm:HorizontalDivider width="25%" /> 
					</VBox> <VBox width="100%"> <ObjectHeader number="" numberUnit="Pipeline" 
					id="objPipeLineNo"> </ObjectHeader> <comm:HorizontalDivider width="25%" /> 
					</VBox> -->
			</HBox>

			<!-- <List items="{/ProductCollection}" headerText="Products"> -->
			<List id="ProjectListId" items="{ProjectStatusDeails>/Projects}">
				<items>
					<ObjectListItem title="{ProjectStatusDeails>title}"
						type="Active" press="onListItemPress" number="{ProjectStatusDeails>percentage}">
						<firstStatus>
							<ObjectStatus text="{ProjectStatusDeails>stage}"
								state="{ProjectStatusDeails>state}" />
						</firstStatus>
						<attributes>
							<ObjectAttribute text="{ProjectStatusDeails>type}" />
							<ObjectAttribute text="{ProjectStatusDeails>proj_status}" />
						</attributes>
					</ObjectListItem>
				</items>
			</List>

		</content>
	</Page>
</core:View>
