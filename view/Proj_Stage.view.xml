<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:viz="sap.viz.ui5.controls" xmlns:layout="sap.ui.layout" xmlns="sap.suite.ui.commons"
	xmlns:m="sap.m" xmlns:u="sap.ui.unified" controllerName="sap.Aero_IT_Demand.prototype.view.Proj_Stage"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<m:Page>
		<m:customHeader>
			<m:Bar>
				<m:contentLeft>
					<m:Button type="Back" press="backToMain" class="simpleBtn" />
				</m:contentLeft>
				<m:contentMiddle>
					<m:Label text="STATS" />
				</m:contentMiddle>
			</m:Bar>
		</m:customHeader>

		<m:content>
			<layout:Splitter width="100%" height="700px">
				<layout:contentAreas>
					<ChartContainer id="idChartContainer"
						showFullScreen="false" showPersonalization="false"
						autoAdjustHeight="true" showLegend="false" personalizationPress="attachPersonalizationPress"
						contentChange="attachContentChange">
						<dimensionSelectors>
							<m:MultiComboBox id="idoSelect1" selectionChange="handleSelectionChange"
								selectionFinish="onSelectItem" width="300px"
								items="{ProjectStageSelectModel>/List}" class="paddMultiCombo">
								<core:ListItem key="{ProjectStageSelectModel>stage}"
									text="{ProjectStageSelectModel>title}" />
							</m:MultiComboBox>

						</dimensionSelectors>
						<content>
							<ChartContainerContent icon="sap-icon://vertical-bar-chart"
								title="Total">
								<content>
									<viz:VizFrame id="idoVizFrame4" uiConfig="{applicationSet:'fiori'}"
										vizType="column" width="100%">
									</viz:VizFrame>
								</content>
							</ChartContainerContent>
							<!-- <ChartContainerContent icon="sap-icon://business-objects-experience" 
								title="Total"> <content> <viz:VizFrame id="idoVizFrame7" uiConfig="{applicationSet:'fiori'}" 
								vizType="combination" width="100%"> </viz:VizFrame> </content> </ChartContainerContent> -->
						</content>
					</ChartContainer>
				</layout:contentAreas>
			</layout:Splitter>

		</m:content>
	</m:Page>
</core:View>
