<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="sap.Aero_IT_Demand.prototype.view.Proj_Stage_Details"
	xmlns:comm="sap.ui.commons" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page>
		<customHeader>
			<Bar>
				<contentLeft>
					<Button type="Back" press="backToMain" class="simpleBtn"/>
				</contentLeft>
				<contentMiddle>
					<Label text="Project Stage" />
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<!-- <VBox width="100%" justifyContent="Center" alignItems="Center"> -->
			<HBox width="100%" height="6em" justifyContent="Center" class="HeaderHBox">
				<ScrollContainer horizontal="true" vertical="false"
					focusable="true" height="4em">
					<SegmentedButton selectedButton="btnAll" id="HeaderSegment"
						class="HeaderSegmentITFCOE">
						<Button id="btnAllProjects" text="All Projects" press="onClickAllProj"
							class="btnAllClass SegmentButtonSpaceClass" width="110px" />
						<Button id="btnPipeLine" text="Pipeline" press="onClickPipeline"
							class="btnAllClass SegmentButtonSpaceClass" width="95px" />
						<Button id="btnJustification" text="Justification" press="onClickJustification"
							class="btnAllClass SegmentButtonSpaceClass" width="110px" />
						<Button id="btnApproval" text="Approval" press="onClickApproval"
							class="btnAllClass SegmentButtonSpaceClass" width="95px" />
						<Button id="btnRequirements" text="Requirements" press="onClickRequirements"
							class="btnAllClass SegmentButtonSpaceClass" width="140px" />
						<Button id="btnDesign" text="Design" press="onClickDesign"
							class="btnAllClass SegmentButtonSpaceClass" width="95px" />
						<Button id="btnConstruct" text="Construct/Test" press="onClickConstruct"
							class="btnAllClass SegmentButtonSpaceClass" width="140px" />
						<Button id="btnWarranty" text="Warranty" press="onClickWarranty"
							class="btnAllClass SegmentButtonSpaceClass" width="95px" />
					</SegmentedButton>
				</ScrollContainer>
			</HBox>
			<!-- </VBox> -->

			<List id="ProjectListDataId" items="{ProjStageList>/Projects}">
				<items>
					<ObjectListItem title="{ProjStageList>title}" type="Active"
						press="onListItemPress" number="{ProjStageList>percentage}">
						<firstStatus>
							<ObjectStatus text="{ProjStageList>stage}" state="{ProjStageList>state}" />
						</firstStatus>
						<attributes>
							<ObjectAttribute text="{ProjStageList>type}" />
							<ObjectAttribute text="{ProjStageList>status}" />
						</attributes>
					</ObjectListItem>
				</items>
			</List>
		</content>
	</Page>
</core:View>
