<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:l="sap.ui.layout" controllerName="sap.Aero_IT_Demand.prototype.view.All_Projects"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showHeader="true" enableScrolling="false" title="Aero IT Demand"
		class="pageCSS pageTitle">
		<subHeader class="header">
			<Toolbar class="header">
				<ToolbarSpacer />
				<SegmentedButton id="segmButtons1" selectedButton="btnProjStage1">
					<Button id="btnStats1" text="Stats" press="onClickStats"
						class="btnStatsClass SegmentButtonSpaceClass" />
					<Button id="btnITFcoe1" text="IT FCOE" press="onClickITFCOE"
						class="btnAllClass SegmentButtonSpaceClass" />
					<Button id="btnProjStage1" text="Projects" press="onClickProjects"
						class="btnAllClass SegmentButtonSpaceClass" />
				</SegmentedButton>
				<ToolbarSpacer />
			</Toolbar>
		</subHeader>
		<content>
			<VBox width="100%" justifyContent="Center">
				<HBox width="100%" justifyContent="Center" alignItems="Center"
					class="backRed hBoxPadBottom">
					<Label id="lab_Projects" text="" class="ProjectClass" />
				</HBox>
				<HBox width="100%" justifyContent="Center" alignItems="Center"
					class="backRed">
					<Label text="Projects" class="whiteText" />
				</HBox>

				<HBox width="100%" justifyContent="Center" alignItems="Center"
					class="ListBGWhite">
					<Label id="lab_Projects1" text="" class="ProjectClass" />
				</HBox>
				<!-- <HBox width="100%" justifyContent="Center" alignItems="Center"> 
					<Label text="Projects" /> </HBox> -->

				<Carousel height="100%" class="sapUiContentPadding ListBGWhite"
					id="id_Carousel" pageChanged="changePage">
					<pages>

						<List id="id_proj_stage_list" headerText="PROJECT STAGE"
							items="{ProjectStageModel>/List}">
							<StandardListItem type='Active'
								title="{ProjectStageModel>title}" description="{ProjectStageModel>stage}"
								press="showProjectStage">
							</StandardListItem>
						</List>

						<List id="id_proj_status_list" headerText="PROJECT STATUS"
							items="{ProjectStatusModel>/List}">
							<StandardListItem type='Active'
								title="{ProjectStatusModel>title}" description="{ProjectStatusModel>status}"
								press="showProjectStatus">
							</StandardListItem>
						</List>

						<List id="id_proj_type_list" headerText="PROJECT TYPE"
							items="{ProjectTypeModel>/List}">
							<StandardListItem type='Active'
								title="{ProjectTypeModel>title}" description="{ProjectTypeModel>type}"
								press="showProjectType">
							</StandardListItem>
						</List>
					</pages>
				</Carousel>
			</VBox>
		</content>
		<footer class="footerRed">
			<Toolbar width="100%">
				<!-- <ToolbarSpacer /> -->
				<Button type="Default" text="SHOW ALL" width="100%" press="onPressShowAll"
					class="footerBtnBack" />
			</Toolbar>
		</footer>
	</Page>
</core:View>
